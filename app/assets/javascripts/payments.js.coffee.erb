$(document).on 'page:change', ->

  isValidAmount = (amount) -> /\$?[,0-9]+(\.[0-9]+)?/.test(amount)
  sanitizeAmount = (amount) -> amount.replace(/[^\d\.]/g, '')

  $('#new_payment input[type=submit]').click (e) ->
    if $(e.currentTarget).data('isConfirming') == true
      return # make payment
